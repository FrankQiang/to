{% extends 'BlogBlogBundle::layout.html.twig' %}
{% block title %}
                  首页管理-轮子
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script>$(function() {if(($('.header').height()+$('.main').height()+$('.footer').height())<$('body').height())$('.main').css('height','100%');}); </script>
{% endblock %}

{% block header %}
       <div style="margin-top:15px"><a href="{{ path('blog_wo_homepage') }}" class="brand">轮子</a></div>
       <div style="height:15px"></div>
       <ul class="nav pull-right">     
             <li style="margin-right:15px"><a href="{{ path('index_category_new') }}">新建</a></li>
             <li style="margin-right:15px"><a href="{{ path('index_category') }}">管理</a></li>
             <li><a href="{{ path('fos_user_security_logout') }}">退出</a></li>
      </ul>
{% endblock %}

{% block body -%}
<div class="container main">
      <div class="row" style="padding-top: 20px;">
             <legend>编辑类名</legend>
             <div class="span7">
      <form action="{{ path('index_category_update', { 'token': entity.token }) }}" method="post" >
             <input type="hidden" name="_method" value="PUT" />
                           <div class="row">
                          		<h5>标题</h5>
                          		<div class="span3">
	                          		{{ form_errors(edit_form.title) }}
                                  	 {{ form_widget(edit_form.title) }}
	                          	</div>
	                          	<div class="btn-group btn-group-justified  pull-right" role="group">
                                <div class="btn-group" role="group">
                                      {{ form_widget(edit_form.submit) }}
                                </div>
                          </div>
	                          	
                          </div>
                           

                           
			
                         {{ form_end(edit_form) }}
	                          
                         {{ form(delete_form) }}
        </div>
      </div>

 </div>

{% endblock %}
