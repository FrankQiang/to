{% extends 'BlogBlogBundle::layout.html.twig' %}
{% block title %}
                  用户管理-轮子
{% endblock %}

 {% block javascripts %}
   {{ parent() }}
     <script>$(function() {if(($('.header').height()+$('.main').height()+$('.footer').height())<$('body').height())$('.main').css('height','100%');}); </script>
{% endblock %}

{% block header %}
       <div style="margin-top:15px"><a href="{{ path('blog_wo_homepage') }}" class="brand">轮子</a></div>
       <div style="height:15px"></div>
       <ul class="nav pull-right">     
             <li><a href="{{ path('fos_user_security_logout') }}">退出</a></li>
      </ul>
       <form action="{{ path('admin_user_search') }}" method="get" class="navbar-search pull-right">
              <input type="text" class="search-query" placeholder="用户名" name="query">
       </form>
{% endblock %}

{% block body %}
<div class="container main">
       <div class="row" style="padding-top: 20px;">
       <legend>Hello {{app.user.username}}</legend>     
              <div class="span12">
                    <div class="row">     

                    {% for entity in entities %}                           
                                  <div class="span10">
                                          <h5>{{ entity.username }}</h5>
                                          <div class="well">
                                                <div class="pull-right"><a href="{{ path('user_edit', { 'token': entity.token }) }}">编辑</a></div>
                                                <span style="padding-right:50px"><a href="{{ path('admin_user_blog', { 'user_id': entity.id }) }}">攻略</a></span>
                                                <span style="padding-right:50px"><a href="{{ path('admin_user_journal', { 'user_id': entity.id }) }}">游记</a></span>
                                          </div>
                                  </div>     
                     {% endfor %}                          
                    </div>
              </div>
       </div>
</div>
{% endblock %}
