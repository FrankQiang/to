{% extends '::layout.html.twig' %}

{% block title %}
                   新闻-轮子
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script>$(function() {if(($('.header').height()+$('.main').height()+$('.footer').height())<$('body').height())$('.main').css('height','100%');}); </script>
{% endblock %}

{% block tab %}
       <a href="{{ path('news_new') }}" class="hidden-xs btn btn-primary btn-sm navbar-btn navbar-right">添加新闻</a>
{% endblock %}

{% block body -%}
<div class="main container">
<nav>
  <ul class="pager">
    <li class="previous"><a href="{{ path('news_date', { 'date': yesterday }) }}"><span aria-hidden="true">&larr;</span> 前一天</a></li>
  </ul>
</nav>
  <div class="list-group">
  {% for entity in entities %}
    <a href="{{ entity.url }}" class="list-group-item" target="_blank">{{entity.title}}</a>
    {% endfor %}
  </div>
</div>
    {% endblock %}
