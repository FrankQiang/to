{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserNews list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>User_id</th>
                <th>News_id</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_news_status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userid }}</td>
                <td>{{ entity.newsid }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_news_status_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_news_status_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_news_status_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
