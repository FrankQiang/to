{% extends '::layout.html.twig' %}

{% block title %}
        {{ entity.title }}-随笔
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/blogwo/css/img.css') }}" type="text/css" />
<link rel="stylesheet" href="{{ asset('bundles/blogwo/css/gotop.css') }}" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script>$(function() {$('.preview').append($('textarea').text());$('textarea').remove();}); </script>
<script type="text/javascript"  src="{{ asset('bundles/blogwo/js/gotop.js') }}"></script>
{% endblock %}

{% block tab %}
      <a href="{{ path('diary_new') }}" class="hidden-xs btn btn-primary btn-sm navbar-btn navbar-right">撰写随笔</a>
{% endblock %}

{% block body %}
<div class="container main">
	<div class="row"   style="padding-top: 20px;">
		<div class="col-md-1"></div>
		<div class="col-md-10">
		       <div class="pull-right" style="font-size: 14px;color: #999;">{{ entity.click }}次阅读</div>
		       <legend>{{entity.title}}</legend>
		       <div class="preview"></div>
		       <textarea>{{entity.blog}}</textarea>
		      <legend></legend>
		      <div class="attention" style="margin-bottom:25px">
		             {% if null!=weibo %}
		      		<h4>本文作者</h4>
		      		<wb:follow-button uid="{{ weibo }}" type="red_4" width="100%" height="64" ></wb:follow-button>
		      		{% endif %}
		      </div>
		      <div class="share" style="margin-bottom:25px">
		      		<h4>分享</h4>
		      		<wb:share-button appkey="175468788" addition="full" type="button" pic="http%3A%2F%2Fwww.wocycle.com%2Fbundles%2Facmeto%2Fimages%2Fzuche.jpg" default_text="随笔 - {{ entity.title }}" ralateUid="5478097122"></wb:share-button>
		     	</div>
		      	<div class="comment">
		       	<h4>评论</h4>
                   		 <wb:comments url="auto" width="auto" appkey="175468788" border="n"></wb:comments>
      			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>
{% endblock %}